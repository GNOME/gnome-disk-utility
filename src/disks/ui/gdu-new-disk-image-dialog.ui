<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GduNewDiskImageDialog" parent="AdwWindow">
    <property name="default-width">440</property>
    <property name="default-height">258</property>
    <property name="width-request">400</property>
    <property name="modal">true</property>
    <property name="title">Create Disk Image</property>
    <property name="content">
      <object class="AdwToolbarView">

        <!-- Headerbar -->
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="show-end-title-buttons">false</property>
            <child type="start">
              <object class="GtkButton">
                <property name="label" translatable="true">Cancel</property>
                <property name="action-name">window.close</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="create_image_button">
                <property name="label" translatable="true">Create</property>
                <signal name="clicked" handler="on_create_image_button_clicked_cb" swapped="True"
                  object="GduNewDiskImageDialog" />
                <style>
                  <class name="suggested-action" />
                </style>
              </object>
            </child>
          </object>
        </child>

        <!-- Body -->
        <property name="content">
          <object class="AdwClamp">
            <child>
              <object class="AdwPreferencesGroup">
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <child>
                  <object class="AdwEntryRow" id="name_entry">
                    <property name="title" translatable="true">Name</property>
                    <signal name="changed" handler="new_disk_image_details_changed_cb"
                      swapped="True" object="GduNewDiskImageDialog" />
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="location_entry">
                    <property name="title" translatable="true">Location</property>
                    <child type="suffix">
                      <object class="GtkButton">
                        <style>
                          <class name="flat" />
                        </style>
                        <property name="valign">GTK_ALIGN_CENTER</property>
                        <property name="icon-name">folder-open-symbolic</property>
                        <signal name="clicked" handler="on_choose_folder_button_clicked_cb"
                          swapped="True" object="GduNewDiskImageDialog" />
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwSpinRow" id="size_entry">
                    <property name="title" translatable="true">Size</property>
                    <signal name="output" handler="set_size_entry_unit_cb" />
                    <signal name="changed" handler="new_disk_image_details_changed_cb"
                      swapped="True" object="GduNewDiskImageDialog" />
                    <property name="adjustment">
                      <object class="GtkAdjustment">
                        <property name="upper">10000000000000</property>
                        <property name="step-increment">0.1</property>
                        <property name="page-increment">10</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>