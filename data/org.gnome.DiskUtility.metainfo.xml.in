<component type="desktop-application">
  <id>org.gnome.DiskUtility</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0+</project_license>
  <name>Disks</name>
  <summary>Disk management utility for GNOME</summary>
  <description>
    <p>
      Disks provides an easy way to inspect, format, partition, and configure disks
      and block devices.
    </p>
    <p>
      Using Disks, you can view SMART data, manage devices, benchmark physical
      disks, and image USB sticks.
    </p>
  </description>
  <screenshots>
    <screenshot>
      <image>https://gitlab.gnome.org/GNOME/gnome-disk-utility/raw/HEAD/data/screenshots/disks-format.png</image>
      <caption>Partition and format disks</caption>
    </screenshot>
    <screenshot>
      <image>https://gitlab.gnome.org/GNOME/gnome-disk-utility/raw/HEAD/data/screenshots/disks-smart.png</image>
      <caption>Inspect drive speed and health status</caption>
    </screenshot>
    <screenshot type="default">
      <image>https://gitlab.gnome.org/GNOME/gnome-disk-utility/raw/HEAD/data/screenshots/disks-main.png</image>
      <caption>Manage your storage devices</caption>
    </screenshot>
  </screenshots>
